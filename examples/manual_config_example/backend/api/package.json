{
  "name": "@example/api",
  "version": "2.4.1",
  "private": true,
  "description": "Main API server with REST and GraphQL endpoints",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "dev": "nodemon --exec ts-node src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist coverage",
    "copy-assets": "cp -r src/assets dist/ || true",
    "migration:generate": "typeorm migration:generate -d src/config/database.ts",
    "migration:run": "typeorm migration:run -d src/config/database.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "deploy": "echo 'Deploying API server...'"
  },
  "dependencies": {
    "@example/types": "file:../../shared/types",
    "@example/utils": "file:../../shared/utils",
    "@example/auth": "file:../auth",
    "express": "^4.18.2",
    "apollo-server-express": "^3.12.0",
    "graphql": "^16.8.0",
    "typeorm": "^0.3.17",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "joi": "^17.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/pg": "^8.10.2",
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "supertest": "^6.3.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}