{
  "name": "@example/build-tools",
  "version": "0.3.1",
  "private": true,
  "description": "Build scripts and configuration tools",
  "main": "dist/build.js",
  "bin": {
    "build-tool": "dist/build.js",
    "deploy-tool": "dist/deploy.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-configs",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.{ts,js}",
    "lint:fix": "eslint src/**/*.{ts,js} --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist coverage",
    "copy-configs": "cp -r src/configs dist/ || true"
  },
  "keywords": ["build", "tools", "deployment", "configuration"],
  "author": "Example Team",
  "license": "MIT",
  "dependencies": {
    "@example/types": "file:../../shared/types",
    "@example/utils": "file:../../shared/utils",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.0",
    "inquirer": "^9.2.0",
    "fs-extra": "^11.1.0",
    "glob": "^10.3.0",
    "webpack": "^5.88.0",
    "esbuild": "^0.19.0",
    "rollup": "^4.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}