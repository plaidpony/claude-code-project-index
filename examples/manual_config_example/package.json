{
  "name": "@example/manual-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Example of manually configured monorepo for Project Index",
  "keywords": ["monorepo", "manual", "custom", "typescript"],
  "license": "MIT",
  "author": "Example Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/manual-monorepo.git"
  },
  "workspaces": [
    "backend/*",
    "frontend/*", 
    "shared/*",
    "tools/*"
  ],
  "scripts": {
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend && npm run build:tools",
    "build:shared": "npm run build --workspace=shared/types && npm run build --workspace=shared/utils",
    "build:backend": "npm run build --workspace=backend/api && npm run build --workspace=backend/auth",
    "build:frontend": "npm run build --workspace=frontend/web && npm run build --workspace=frontend/mobile",
    "build:tools": "npm run build --workspace=tools/build && npm run build --workspace=tools/cli",
    "dev": "concurrently \"npm run dev --workspace=backend/api\" \"npm run dev --workspace=frontend/web\"",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test --workspace=backend/api --workspace=backend/auth",
    "test:frontend": "npm run test --workspace=frontend/web --workspace=frontend/mobile",
    "test:shared": "npm run test --workspace=shared/types --workspace=shared/utils",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "deploy": "npm run build && npm run deploy:backend && npm run deploy:frontend",
    "deploy:backend": "npm run deploy --workspace=backend/api --workspace=backend/auth",
    "deploy:frontend": "npm run deploy --workspace=frontend/web",
    "start": "npm run start --workspace=backend/api",
    "migration:run": "npm run migration:run --workspace=backend/api",
    "seed": "npm run seed --workspace=backend/api"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "config": {
    "custom_build_order": [
      "shared/types",
      "shared/utils", 
      "backend/auth",
      "backend/api",
      "frontend/web",
      "frontend/mobile",
      "tools/build",
      "tools/cli"
    ]
  }
}