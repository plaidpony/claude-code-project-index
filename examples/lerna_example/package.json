{
  "name": "@example/lerna-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Example Lerna monorepo for Project Index",
  "keywords": ["lerna", "monorepo", "typescript"],
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "publish": "lerna publish",
    "version": "lerna version",
    "changed": "lerna changed",
    "diff": "lerna diff",
    "exec": "lerna exec",
    "list": "lerna list",
    "run": "lerna run",
    "precommit": "lint-staged",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lerna": "^7.4.2",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}