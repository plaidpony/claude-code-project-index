{
  "name": "@example/pnpm-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Example PNPM workspace monorepo for Project Index",
  "keywords": ["pnpm", "monorepo", "workspace", "typescript"],
  "license": "MIT",
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "type-check": "pnpm -r run type-check",
    "clean": "pnpm -r run clean",
    "install:all": "pnpm install -r",
    "update:deps": "pnpm update -r",
    "deploy:services": "pnpm --filter=\"./services/*\" run deploy",
    "build:packages": "pnpm --filter=\"./packages/*\" run build",
    "test:apps": "pnpm --filter=\"./apps/*\" run test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "graph": "pnpm -r exec -- echo $npm_package_name"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "^6.9.1", 
    "eslint": "catalog:",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "typescript": "catalog:",
    "turbo": "^1.10.16"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "catalog:"
    },
    "patchedDependencies": {},
    "allowedVersions": {
      "typescript": "5"
    }
  },
  "catalog": {
    "react": "^18.2.0",
    "typescript": "^5.2.2", 
    "eslint": "^8.48.0",
    "jest": "^29.5.0",
    "@types/node": "^20.8.0"
  }
}