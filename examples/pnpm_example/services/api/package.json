{
  "name": "@example/api-service",
  "version": "3.2.1",
  "private": true,
  "description": "Main API service with Express and GraphQL",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t api-service .",
    "docker:run": "docker run -p 3000:3000 api-service",
    "deploy": "echo 'Deploying API service...'"
  },
  "dependencies": {
    "@example/database": "workspace:*",
    "@example/auth": "workspace:*", 
    "@example/common": "workspace:*",
    "express": "^4.18.2",
    "apollo-server-express": "^3.12.0",
    "graphql": "^16.8.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "catalog:",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "jest": "catalog:",
    "supertest": "^6.3.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}