{
  "name": "@example/worker-service", 
  "version": "2.0.7",
  "private": true,
  "description": "Background job worker service with Bull Queue",
  "main": "dist/worker.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/worker.ts",
    "start": "node dist/worker.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t worker-service .",
    "docker:run": "docker run worker-service",
    "deploy": "echo 'Deploying Worker service...'"
  },
  "dependencies": {
    "@example/database": "workspace:*",
    "@example/common": "workspace:*",
    "bull": "^4.11.0",
    "ioredis": "^5.3.0",
    "cron": "^2.4.0",
    "nodemailer": "^6.9.0",
    "aws-sdk": "^2.1477.0"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/cron": "^2.0.1", 
    "@types/nodemailer": "^6.4.11",
    "@types/aws-sdk": "^2.7.0",
    "@types/node": "catalog:",
    "@types/jest": "^29.5.0",
    "jest": "catalog:",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}